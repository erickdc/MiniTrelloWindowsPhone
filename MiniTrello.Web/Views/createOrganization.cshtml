@{
    PageData["title"] = "MiniTrello | Create Organization";
}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <center><h2>Create Organization <small>Please fill the blanks</small></h2></center>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="name" id="name" ng-model="createOrganizationModel.Name" class="form-control input-lg" placeholder="Name you organization" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="description" id="description" ng-model="createOrganizationModel.Description" class="form-control input-lg" placeholder="Description" tabindex="2">
                    </div>
                </div>
            </div>
           
          
          
            <hr class="colorgraph">
            <div class="row">
                <center>
                    <div class="col-xs-12 col-md-6">
                        <button type="submit" ng-click="createOrganization()" class="btn btn-primary btn-block btn-lg" tabindex="7">Add Organization</button>
                    </div>
                </center>
            </div>
        </form>
    </div>
</div>

